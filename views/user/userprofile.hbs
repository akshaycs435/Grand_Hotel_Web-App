<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>

  <body>

    <div class="site-wrap">

      <div class="container rounded bg-white" style="margin-top: 3%;">

        <div class="row" style="background-color:white">
          <div class="col-md-6">
            <div
              class="d-flex flex-column align-items-center text-center p-3 py-5"
            ><img
                class="rounded-circle mt-5"
                width="150px"
      src="https://bootdey.com/img/Content/avatar/avatar6.png">
                <span class="font-weight-bold">{{userDetails.name}}</span><span
                class="text-black-50"
              >{{userDetails.email}}</span><span>
              </span></div>

          </div>
          <div class="col-md-6">
            <div class="p-3 py-5">
              <div
                class="d-flex justify-content-between align-items-center mb-3"
              >
                <h4 class="text-right">Profile Settings</h4>
              </div>
              <form>
                <div class="">
                  <div class=""><label class="labels">Name</label>
                    <input
                      style="font-weight:900; color:black"
                      type="text"
                      class="form-control"
                      name="name"
                      placeholder="first name"
                      value={{userDetails.name}}
                    />
                  </div>
                </div>
                <div class="">
                  <div class="" style="margin-top: 15px;"><label
                      class="labels"
                    >Mobile Number</label>
                    <input
                      style="font-weight:900;color:black"
                      type="text"
                      name="mobile"
                      class="form-control"
                      placeholder="enter phone number"
                      value={{userDetails.mobilenumber}}
                    />
                  </div>
                </div>
                <div class="">
                  <div class="" style="margin-top: 15px;"><label
                      class="labels"
                    >Email ID</label>
                    <input
                      style="font-weight:900;color:black"
                      type="text"
                      name="email"
                      class="form-control"
                      placeholder="enter email id"
                      value={{userDetails.email}}
                    />
                  </div>
                </div>

                {{! <button
                  type="submit"
                  style="width:100px;height:30px;font-size:small;margin-top:10px";
                  class="btn btn-primary mt-2"
                >
                  Update
                </button> }}

              </form>

              <form action="/update" method="get" style="display:inline;">
                <button type="submit" style="margin-top: 15px;" class="btn btn-primary w-40">
                  update
                </button>
              </form>

              <form
                action="/changeuserPassword"
                method="get"
                style="display:inline;"
              >
                <button type="submit" style="margin-top: 15px;" class="btn btn-primary w-30">
                  change password
                </button>
              </form>


<form
                action="/receipt"
                method="get"
                style="display:inline;"
              >
                <button type="submit" style="margin-top: 15px;" class="btn btn-primary w-30">
                  cancel
                </button>
              </form>



            </div>
          </div>
        </div>
      </div>
    </div>

  </body>

</html>